# Use an official Python runtime as a parent image
FROM python:3.11

# Set the working directory in the container

COPY requirements.txt ./

RUN pip install --no-cache-dir -r requirements.txt


# Copy your test suite files into the container
COPY . /app
WORKDIR /app/automate/

# Copy entry.sh into the container
#COPY entry.sh ./
#RUN chmod +x ./entry.sh

# Define the entry point to run Robot Framework
CMD ["python", "--version"]
#CMD ["./entry.sh"]
CMD ["robot","-d","output","--output", "output.xml", "--xunit", "res.xml","Tests/verify/*"]
